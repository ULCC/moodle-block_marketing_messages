<div id="marketmess" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        {{#indicators}}
            <li data-target="#marketmess" data-slide-to="{{indi}}" class="{{activ}}"></li>
        {{/indicators}}
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner" role="listbox">
        {{#announcements}}
            <div class="carousel-item {{activ}} text-center p-4" data-interval="{{interval}}">
                {{{carouseltext}}}
            </div>
        {{/announcements}}
    </div>

    <!-- Left and right controls -->
    {{#multimess}}
    <a class="carousel-control-prev" href="#marketmess" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
      <!-- i class="fa fa-arrow-left" aria-hidden="true"></i -->
    </a>
    <a class="carousel-control-next" href="#marketmess" data-slide="next">
      <span class="carousel-control-next-icon"></span -->
      <!-- i class="fa fa-arrow-right" aria-hidden="true"></i -->
    </a>
    {{/multimess}}
</div>

{{#js}}
require(['theme_boost/bootstrap/carousel']);
require(['block_marketing_messages/notif'], function(noti) {
    noti.initialise();
});
{{/js}}